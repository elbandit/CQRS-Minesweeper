<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="Columbo.Minesweeper.Application.Queries.Views"
        assembly="Columbo.Minesweeper.Application">

  <class name="MinefieldModel" table="Games" mutable="false" lazy="false" >

    <id name="game_id" type="Guid" />
	  
	<property name="game_won" column="Has_Won"/>
	<property name="game_lost" column="Has_Lost"/>

	<bag name="raw_tiles" lazy="false">
      <key column="game_id"/>
      <one-to-many class="TileModel"></one-to-many>      
    </bag>
   
  </class>
                         
</hibernate-mapping>